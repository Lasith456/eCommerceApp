{
  "scripts": {
    "install:all":  "concurrently \"cd admin && npm install\" \"cd frontend && npm install\" \"cd backend && npm install\",
    "install:admin": "cd admin && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",

    "build:all": "npm-run-all build:admin build:frontend build:backend",
    "build:admin": "cd admin && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",

    "start:all": "concurrently \"cd admin && npm run dev\" \"cd frontend && npm run dev\" \"cd backend && npm start\""
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "concurrently": "^8.2.2"
  }
}
